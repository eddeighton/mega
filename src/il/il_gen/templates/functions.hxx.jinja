struct {{ inline.element_name }} : InlineFunction
{
    {{ inline.element_name }}()
    {
        using namespace std::string_literals;
        name = "{{ inline.function_name }}"s;
{% for parameter in inline.parameters %}
        parameterTypes.emplace_back( {{ parameter.variable_type }}{ {{ parameter.data_type }} } );
{% endfor %}
        returnType = {{ inline.return_variable_type }}{ {{ inline.return_data_type }} };
    }
};
{% endfor %}

