
msg GetVersion
{
    request();
    response(std::string version);
}

msg ListActivities
{
    request();
    response(std::vector< ActivityID > activities);
}

msg PipelineRun
{
    request(mega::pipeline::Pipeline::ID pipelineID);
    response(std::string result);
}

msg PipelineReadyForWork
{
    request(ActivityID rootActivityID);
    response(mega::pipeline::TaskDescriptor task);
}

msg PipelineWorkProgress
{
    request(ActivityID rootActivityID, mega::pipeline::TaskDescriptor task, std::string progress);
    response();
}

msg PipelineWorkFailed
{
    request(ActivityID rootActivityID, mega::pipeline::TaskDescriptor task);
    response();
}

msg PipelineWorkCompleted
{
    request(ActivityID rootActivityID, mega::pipeline::TaskDescriptor task);
    response();
}

