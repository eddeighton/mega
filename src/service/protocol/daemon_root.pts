
// host requests
msg GetVersion
{
    request();
    response(std::string version);
}

msg ListActivities
{
    request();
    response(std::vector< network::ActivityID > activities);
}

msg PipelineRun
{
    request(mega::pipeline::Configuration configuration);
    response(mega::network::PipelineResult result);
}

msg Shutdown
{
    request();
    response();
}

// worker pipelines
msg PipelineReadyForWork
{
    request(network::ActivityID rootActivityID);
    response();
}

msg PipelineWorkProgress
{
    request(std::string message);
    response();
}

// stash
msg getBuildHashCode
{
    request( boost::filesystem::path filePath );
    response( task::FileHash hashCode );
}

msg setBuildHashCode
{
    request( boost::filesystem::path filePath, task::FileHash hashCode );
    response();
}

msg stash
{
    request( boost::filesystem::path filePath, task::DeterminantHash determinant );
    response();
}

msg restore
{
    request( boost::filesystem::path filePath, task::DeterminantHash determinant );
    response( bool bRestored );
}
