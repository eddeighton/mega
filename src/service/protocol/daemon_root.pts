
msg GetVersion
{
    request();
    response(std::string version);
}

msg ListActivities
{
    request();
    response(std::vector< network::ActivityID > activities);
}

msg PipelineRun
{
    request(mega::pipeline::Pipeline::ID pipelineID, mega::pipeline::Configuration configuration);
    response(std::string result);
}

msg PipelineReadyForWork
{
    request(network::ActivityID rootActivityID);
    response(mega::pipeline::TaskDescriptor task);
}

msg PipelineWorkProgress
{
    request(network::ActivityID rootActivityID, mega::pipeline::TaskDescriptor task, std::string message);
    response();
}

msg PipelineWorkFailed
{
    request(network::ActivityID rootActivityID, mega::pipeline::TaskDescriptor task, std::string message);
    response();
}

msg PipelineWorkCompleted
{
    request(network::ActivityID rootActivityID, mega::pipeline::TaskDescriptor task, std::string message);
    response();
}

