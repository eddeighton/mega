    ConversationBase::RequestStack stack( "{{ filename }}::MSG_{{ request.name }}_Request", m_conversation, m_sender.getConnectionID() );

    {
        const Message msg = MSG_{{ request.name }}_Request::make
        (
            MSG_{{ request.name }}_Request
